<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_loading_bg"
        android:gravity="center"
        android:minHeight="@dimen/space_70dp"
        android:minWidth="@dimen/space_70dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_10dp"
        android:paddingRight="@dimen/space_10dp">


        <ProgressBar
            android:layout_width="@dimen/space_30dp"
            android:layout_height="@dimen/space_30dp"
            android:indeterminateDrawable="@drawable/dialog_loading_progressbar" />

        <TextView
            android:id="@+id/dialog_loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/loading"
            android:textColor="@color/rv_item_bg"
            android:textSize="@dimen/font_size_12sp" />
    </LinearLayout>


</RelativeLayout>