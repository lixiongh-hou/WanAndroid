<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_5dp">

    <TextView
        android:id="@+id/itemSearchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@drawable/search_selected_text"
        android:paddingStart="@dimen/space_10dp"
        android:paddingEnd="@dimen/space_10dp"
        android:paddingTop="@dimen/space_5dp"
        android:paddingBottom="@dimen/space_5dp"/>
    <ImageView
        android:id="@+id/itemSearchDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_search_down"
        android:layout_gravity="end"
        android:visibility="gone"/>
</FrameLayout>
