<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/cacheLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp"
        android:background="@color/rv_bg"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/space_10dp"
        android:paddingStart="@dimen/space_13dp"
        android:paddingEnd="@dimen/space_13dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清理缓存"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/cacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_13sp"
            android:textColor="@color/color_99"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5dp"
        android:background="@color/rv_line_bg"/>
    <LinearLayout
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp"
        android:background="@color/rv_bg"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_13dp"
        android:paddingEnd="@dimen/space_13dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查更新"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/versionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_13sp"
            android:textColor="@color/color_99"/>
    </LinearLayout>
</LinearLayout>
