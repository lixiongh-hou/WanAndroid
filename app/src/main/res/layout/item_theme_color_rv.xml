<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp"
        android:paddingStart="@dimen/space_13dp"
        android:paddingEnd="@dimen/space_13dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <com.example.mvpbase.widget.MsgView
            android:id="@+id/themeColorBlock"
            android:layout_width="@dimen/space_20dp"
            android:layout_height="@dimen/space_20dp"
            app:mv_cornerRadius="@dimen/space_3dp"
            app:mv_backgroundColor="@color/theme_color"/>

        <TextView
            android:id="@+id/themeColorTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="胖次蓝"
            android:textSize="@dimen/font_size_14sp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/space_13dp"/>

        <ImageView
            android:id="@+id/themeColorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hook_icon"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5dp"
        android:background="@color/color_ED"
        android:layout_marginStart="@dimen/space_13dp"/>
</LinearLayout>
