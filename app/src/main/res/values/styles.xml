<resources>
    <!--默认TabLayout样式-->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/tab_bg</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">@dimen/space_2dp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayoutTextSize">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>
    <style name="TabLayoutTextSize_two">
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>